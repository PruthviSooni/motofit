<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_regular_service" />

        <TextView
            android:id="@+id/break_type"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iv1"
            android:fontFamily="@font/google_sans_regular"
            android:paddingTop="2.2dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_below="@id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@id/time"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/break_type"
            android:layout_toEndOf="@id/iv3"
            android:fontFamily="@font/google_sans_regular"
            android:paddingTop="2.2dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/iv3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_bike" />

        <TextView
            android:id="@+id/bike_model"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:layout_below="@id/time"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv5"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/google_sans_regular"
            android:textSize="18sp"
            android:paddingTop="2.2dp" />

    </RelativeLayout>


</RelativeLayout>